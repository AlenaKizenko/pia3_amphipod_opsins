out_dir = config["out_dir"]

rule all:
    input: f"{out_dir}/db_align.fasta"

rule mafft_align_db_seqs:
    input: config["db"],
    output: "{out_dir}/db_align.fasta"
    benchmark: "{out_dir}/benchmarks/build_initial_tree.txt"
    conda: "pia3.yml"
    log: "{out_dir}/logs/build_initial_tree.txt"
    threads: 8
    shell: "mafft --thread {threads} --auto {input} > {output}"

